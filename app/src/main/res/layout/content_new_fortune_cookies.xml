<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_new_fortune_cookies"
        tools:context=".NewFortuneCookies">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        <TextView
                android:text="New Cookies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark" android:textSize="20sp"
                android:paddingTop="8dp" android:paddingBottom="8dp" android:background="@drawable/shape1"
                android:textStyle="bold"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp" app:srcCompat="@drawable/closed_cookie"
                android:id="@+id/imageView" android:background="@drawable/shape1" android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
        <TextView
                android:text="Result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:textAlignment="center"
                android:textColor="@android:color/black" android:textSize="20sp"
                android:paddingTop="8dp" android:paddingBottom="8dp" android:background="@drawable/shape2"
                android:textStyle="bold"/>
        <TextView
                android:text="Result : No Result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark" android:textSize="20sp"
                android:paddingTop="8dp" android:paddingBottom="8dp" android:background="@drawable/shape1"
                android:id="@+id/resultText" android:paddingLeft="30dp" android:textStyle="bold"/>
        <TextView
                android:text="Date : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" android:textSize="14sp"
                android:paddingTop="4dp" android:paddingBottom="4dp" android:background="@drawable/shape3"
                android:textStyle="bold" android:id="@+id/dateText"
                android:textAlignment="textEnd" android:paddingRight="20dp"/>
        <Button
                android:text="Shake!"
                android:layout_width="150dp"
                android:layout_height="150dp" android:id="@+id/shakeBtn"
                android:background="@drawable/shape4" android:textAlignment="center" android:layout_marginLeft="125dp"
                android:layout_marginTop="60dp" android:textStyle="bold" android:onClick="OnClick"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>